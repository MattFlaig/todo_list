<div class= "center hero-unit">
<h1><%= t("text.todo_item") %></h1>
</br>
<p>
<table class="table table-striped table-bordered table-condensed">
<thead>
  <tr>
    <th></th>
    <th colspan="1"><%= t("activerecord.attributes.todo_item.name") %></th>
    <th colspan="1"><%= t("activerecord.attributes.todo_item.content") %></th>
    <th colspan="1"> <%= t("activerecord.attributes.todo_item.comment") %></th>
    <th colspan="1"><%= t("activerecord.attributes.todo_item.deadline") %></th>
    <th colspan="1"><%= t("activerecord.attributes.todo_item.status") %></th>
    <th colspan="1"> <%= t("text.actions") %></th>
  </tr>
</thead>

  <tbody>
      <tr>
        <td></td>
        <td><%=  @todo_item.name %></td>
        <td><%=  @todo_item.content %></td>
        <td><%=  @todo_item.comment %></td>
        <td><%=  @todo_item.deadline.strftime("%d/%m/%Y")%></td>
        <td><% if @todo_item.status == 0 %>
              <%= t("text.still_to_be_done") %>
            <% else %>
              <%= t("text.done") %>
            <% end %> 
        </td>
          
        <td>
          <%= link_to(@todo_item, method: :delete, class: "btn btn-small btn-danger") do %> 
            <%= t("text.delete") %>
            <i class="icon-trash icon-white"></i>
          <% end %>

          </br>
          </br>

          <% if @todo_item.status == 0 %>
            <%= link_to(edit_todo_item_path(@todo_item), class: "btn btn-small btn-warning") do %>
              <%= t("text.edit") %>
              <i class="icon-edit icon-white"></i>
            <% end %>
              </br>
              </br>
            <%= link_to(done_todo_item_path(@todo_item), class: "btn btn-small btn-success") do %>
              <%= t("text.done") %>
              <i class="icon-ok icon-white"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
  
     
  </tbody>
</table>
</br>

  <div class="float" >
    <%= back_to_todo_list %>
  </div>

</br>
</div>