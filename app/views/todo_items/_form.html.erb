<%= form_for @todo_item do |f| %>
  <% if @todo_item.errors.any? %>
    <%= flash[:danger] = t("messages.error_msg") %>
    <ul>
      <% @todo_item.errors.full_messages.each do |msg| %>
        <li><%=  msg %></li>
      <% end %>
    </ul>
  <% end %>
</br>

<fieldset>
  <div class="control-group">
  <%= f.label :name %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :content %>
    <div class="controls">
      <%= f.text_field :content %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :comment %>
    <div class="controls">
      <%= f.text_field :comment %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :deadline %>
    <div class="field">
    <% if @todo_item.deadline != nil %>
      <%= f.date_select:deadline, :value => @todo_item.deadline.strftime("%d/%m/%Y") %>
    <% else %>
      <%= f.date_select :deadline %>
    <% end %>
    
   
  </div>

  <div>
    <%= f.hidden_field :status, :value => 0 %>
  </div>
  
  </br>
<div>
  <%= f.submit class: "btn btn-large btn-primary" %>
  <div class="float" >
    <%= back_to_todo_list %>
  </div>
</div>

</fieldset>
<% end %>